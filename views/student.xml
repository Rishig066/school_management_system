<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    form view-->
        <record id="student_view_form" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="roll_no"/>
                                <field name="standard"/>

                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="cc_name"/>

                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--    tree vies-->
        <record id="student_view_tree" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="roll_no"/>
                    <field name="gender"/>
                    <field name="note"/>

                    <field name="standard"/>
                    <field name="cc_name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>